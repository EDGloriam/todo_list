<h1>Simple todo lists</h1>
		<h3>From Ruby Garage</h3>
		<div id="main-container">

			<% @projects.each do |project| %>
					<div projectid="<%=project.id%>" class="project" >
						<div class="main-table">
							<div class="table-header">
								<form class="edit-project">
									<input class="edit-project-name" type="text">
									<button class="js-cancel-btn">Cancel</button>
									<button class="js-update-btn">Update</button>
								</form>
								<div class="ti ti-calendar table-name">
									<%=project.name%>
								</div>
								<div class="right-icon">
									<a href="#" class="ti ti-pencil right-line js-edit-project"></a>                      <!--пустая ссылка-->
									<a href="#" class="ti ti-trash js-delete-project"></a>
								</div>
							</div> <!--table-header-->

								<table class="task-table">
									<tbody>
									<tr>
										<th><div class="plus"></div></th>
										<th colspan="2">
											<form>
												<input class="task-name", type="text" name="add-task" placeholder="Start typing here to create a task..." />
												<input class="button js-add-task" type="submit" value="Add Task" />
											</form>
										</th>
									</tr>
									<% project.tasks.each do |task| %>
										<tr>
											<td class="col-1"><div class="foursquare"></div></td>
											<td class="col-2"><p><%= task.content %></p></td>
											<td class="col-3">
												<div class="table-icon">
													<a href="" class="ti ti-split-v"></a>
													<a href="" class="ti ti-pencil left-right-line"></a>
													<a href="" class="ti ti-trash"></a>
												</div>
											</td>
										</tr>
									<% end %>
								</tbody>
								</table>

						</div> <!--main-table-->
					</div>
			<% end %>

		</div>




		<input id="new-project-name" type="text">
		<button id="create-project">Create</button>

		<div class="button-add-list">
			<div class="plus"></div><span>Add TODO List</span>
		</div>

		<div id="test-container">


		</div>

		<div class="copy">&#169 Ruby Garage</div>