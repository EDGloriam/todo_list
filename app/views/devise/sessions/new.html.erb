  <div class="authorization-container">
  <h2>Sign in</h2>
   <%= form_for(resource, as: resource_name, id: "login", url: session_path(resource_name)) do |f| %>
    <p class="field">
      <%= f.email_field :email, autofocus: true, id: "email-field",placeholder: "email" %>
    </p>

    <p class="field">
      <%= f.password_field :password, autocomplete: "off", id: "password-field",placeholder: "password" %>
    </p>
    <div class="button-container">
      <% if devise_mapping.rememberable? %>
        <div id="checkbox" class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <p class="actions">
        <%= f.submit "Log in", id: "login-button"%>
      </p>
    </div>
    <% end %>


  <%= render "devise/shared/links" %>
</div>

