<div class="authorization-container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p class="field">
    <%= f.email_field :email, autofocus: true, id: "email-field", placeholder: "email" %>
  </p>

  <p class="field">
    <%= f.password_field :password, autocomplete: "off", id: "password-field", placeholder: "password"  %>
  </p>

  <p class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", id: "password-field",placeholder: "confirm the password "  %>
  </p>
<div class="button-container">
  <p class="actions">
    <%= f.submit "Sign up", id: "login-button" %>
  </p>
</div>
<% end %>

<%= render "devise/shared/links" %>

</div>